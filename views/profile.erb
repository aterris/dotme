<section id="profile">
  <section id="overview">
    <figure id="avatar">
      <img src="<%= @avatar %>" alt="<%= @name %>" />
    </figure>
    <h1><%= @name %></h1>
    <h2><%= @subheading %></h2>
  </section>

  <section id="details">
    <h2><%= @bio_heading %></h2>
    <p><%= @bio %></p>
  </section>
</section>

<ul id="links">
  <li><a href="<%= @twitter_url %>" alt="">Twitter</a></li>
  <li><a href="<%= @github_url %>" alt="">Github</a></li>
  <li><a href="<%= @linkedin_url %>" alt="">Linkedin</a></li>
  <li><a href="<%= @forrst_url %>" alt="">Forrst</a></li>
  <li><a href="<%= @dribble_url %>" alt="">Dribble</a></li>
  <li><a href="<%= @foursquare_url %>" alt="">Foursquare</a></li>
  <li><a href="<%= @gowalla_url %>" alt="">Gowalla</a></li>
  <li><a href="<%= @facebook_url %>" alt="">Facebook</a></li>
  <li><a href="<%= @blog_url %>" alt="">Blog</a></li>
</ul>
