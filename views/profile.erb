<section id="profile-overview">
  <figure id="avatar">
    <img src="<%= @avatar %>" alt="<%= @name %>" />
  </figure>
  <h1><%= @name %></h1>
  <h2><%= @subheading %></h2>
</section>

<section id="profile-details">
  <h2><%= @bio_heading %></h2>
  <p><%= @bio %></p>
</section>

<section id="profile-links">
  <a href="<%= @twitter_url %>" alt="">Twitter</a>
  <a href="<%= @github_url %>" alt="">Github</a>
  <a href="<%= @linkedin_url %>" alt="">Linkedin</a>
  <a href="<%= @forrst_url %>" alt="">Forrst</a>
  <a href="<%= @dribble_url %>" alt="">Dribble</a>
  <a href="<%= @foursquare_url %>" alt="">Foursquare</a>
  <a href="<%= @gowalla_url %>" alt="">Gowalla</a>
  <a href="<%= @facebook_url %>" alt="">Facebook</a>
  <a href="<%= @blog_url %>" alt="">Blog</a>


</section>
