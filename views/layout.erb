<!doctype html>
<html lang="en">
<head>
  <!-- Meta Info -->
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="initial-scale=1.0, width=device-width">
  <meta name="description" content="<%= @profile.subtitle %>">
  <title><%= @profile.title %></title>
  
  <!-- Styles -->
  <link href='http://fonts.googleapis.com/css?family=Bevan&v1' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Droid+Sans&v1' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/style.css">

  <% if @dotme %>
     <link rel="stylesheet" href="/css/configbar.css">
  <% end %>

  <!--[if lt IE 9]>
  <script src="/js/html5shiv.js"></script>
  <![endif]-->
</head>
<body>
  <!-- Flash Notices -->
  <% unless flash.nil? %>
  <section id="notices">
    <% unless flash[:notice].nil? %>
      <p class="flash notice"><%= flash[:notice] %></p>
    <% end %>
    <% unless flash[:error].nil? %>
      <p class="flash error"><%= flash[:error] %></p>
    <% end %>
  </section>
  <% end %>

  <!-- Content -->
  <%= yield %>

  <!-- Scripts -->
  <script src="/js/jquery-1.6.1.min.js"></script>
  <script src="/js/respond.min.js"></script>
  <script src="/js/jquery.fittext.js"></script> 
  <script> 
    $("#profile h1, #profile h3").fitText(0.9);
	$('#profile h2').fitText(2.3);
  </script>

  <% if @dotme %>
    <script src="/js/configbar.js"></script>
  <% end %>
</body>
</html>
